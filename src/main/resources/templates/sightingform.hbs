{{#partial "content"}}
    <div class="section">
        <div class="form-left">
            <h2>Sightings</h2>
            <div class="icon">
                <img  src="/images/bg.jpg" alt="image">
            </div>
        </div>
        <div class="form-right">
            <h3>Add a sighting</h3>
            <form action="/sightings/new" method="post" name="sightingForm" class="form">
                <input class="form-control input" type="text" placeholder="Enter the ranger name..." name="rangerName" autocomplete="off">
                <select class="form-control input" name="animal" >
                    <option label="" hidden disabled selected value>Select animal...</option>
                    {{#each   animals}}
                        <option value="{{id}}">{{name}}</option><br><br>
                    {{/each}}
                    {{#each endangeredAnimals}}
                        <option value="{{id}}">{{name}}</option><br><br>
                    {{/each}}
                </select>
                <select class="form-control input" name="sightLocation">
                    <option label="" hidden disabled selected value>Enter location </option>
                    <option value="Zone A">Zone A</option>
                    <option value="Zone B">Zone B</option>
                    <option value="Zone C">Zone C</option>
                </select>
                <button type="submit" class="button">Add</button>
            </form>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}
{{#partial "content"}}

    <div class="pages">
        <h2 class="text-center">Endangered Animals</h2>
    {{#if endangeredAnimals}}
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Age</th>
                        <th>Health</th>
                    </tr>
                    </thead>
                    {{#each endangeredAnimals}}
                        <tbody>
                        <tr>
                            <td>{{ id }}</td>
                            <td>{{ name }}</td>
                            <td>{{ type }}</td>
                            <td>{{ age}}</td>
                            <td>{{ health }}</td>
                        </tr>
                        </tbody>
                    {{/each}}
                </table>
            </div>
    {{else}}
            <p>No endangered animal! Please add one if it exists</p>
            <a href="/endangered/form" class="otherbuttons">Add animal</a>
        </div>
    {{/if}}
{{/partial}}
{{> layout.hbs}}

